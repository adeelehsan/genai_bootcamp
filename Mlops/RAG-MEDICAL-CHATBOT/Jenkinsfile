pipeline {
    agent any

    environment {
        ECR_REGION = 'eu-north-1'              // ECR repository region
        APPRUNNER_REGION = 'eu-west-1'         // App Runner service region (Ireland)
        ECR_REPO = 'my-repo'
        IMAGE_TAG = 'latest'
        SERVICE_NAME = 'llmops-medical-service'
        PROJECT_DIR = 'Mlops/RAG-MEDICAL-CHATBOT'  // Path from repo root to project
    }

    stages {
        stage('Clone GitHub Repo') {
            steps {
                script {
                    checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'github-token', url: 'https://github.com/adeelehsan/genai_bootcamp.git']])
                }
            }
        }

        stage('Build, Scan, and Push Docker Image to ECR') {
            steps {
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-token']]) {
                    script {
                        def accountId = sh(script: "aws sts get-caller-identity --query Account --output text", returnStdout: true).trim()
                        def ecrUrl = "${accountId}.dkr.ecr.${env.ECR_REGION}.amazonaws.com/${env.ECR_REPO}"
                        def imageFullTag = "${ecrUrl}:${IMAGE_TAG}"

                        sh """
                        # Navigate to project directory
                        cd ${PROJECT_DIR}

                        # Login to ECR
                        aws ecr get-login-password --region ${ECR_REGION} | docker login --username AWS --password-stdin ${ecrUrl}

                        # Build Docker image from the project directory
                        docker build -t ${env.ECR_REPO}:${IMAGE_TAG} .

                        # Run Trivy security scan
                        trivy image --severity HIGH,CRITICAL --format json -o trivy-report.json ${env.ECR_REPO}:${IMAGE_TAG} || true

                        # Tag and push image
                        docker tag ${env.ECR_REPO}:${IMAGE_TAG} ${imageFullTag}
                        docker push ${imageFullTag}
                        """

                        archiveArtifacts artifacts: "${PROJECT_DIR}/trivy-report.json", allowEmptyArchive: true
                    }
                }
            }
        }

         stage('Deploy to AWS App Runner') {
            steps {
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-token']]) {
                    script {
                        def accountId = sh(script: "aws sts get-caller-identity --query Account --output text", returnStdout: true).trim()
                        def ecrUrl = "${accountId}.dkr.ecr.${env.ECR_REGION}.amazonaws.com/${env.ECR_REPO}"
                        def imageFullTag = "${ecrUrl}:${IMAGE_TAG}"

                        echo "Triggering deployment to AWS App Runner in ${APPRUNNER_REGION}..."

                        sh """
                        SERVICE_ARN=\$(aws apprunner list-services --query "ServiceSummaryList[?ServiceName=='${SERVICE_NAME}'].ServiceArn" --output text --region ${APPRUNNER_REGION})
                        echo "Found App Runner Service ARN: \$SERVICE_ARN"

                        aws apprunner start-deployment --service-arn \$SERVICE_ARN --region ${APPRUNNER_REGION}
                        """
                    }
                }
            }
        }
    }
}